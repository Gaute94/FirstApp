    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/spill_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_play_arrow_black_24dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:background="@color/primary"
            android:onClick="play"
            android:textColor="@color/icons"/>

        <ImageButton
            android:id="@+id/statistikk_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/spill_button"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_show_chart_black_24dp"
            android:text="@string/statistikk_text"
            android:background="@color/colorPrimary"
            android:textColor="@color/icons"
            android:onClick="statistics"/>


        <ImageButton
            android:id="@+id/preferanser_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="@string/settings_text"
            android:layout_below="@+id/statistikk_button"
            android:src="@drawable/ic_settings_black_24dp"
            android:background="@color/accent"
            android:layout_centerHorizontal="true"
            android:onClick="preferanser"
            android:textColor="@color/icons"/>
    </RelativeLayout>
