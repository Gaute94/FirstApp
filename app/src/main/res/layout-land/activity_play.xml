    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/tavlebilde_land"
        >
        <TextView
            android:drawableStart="@drawable/ic_clear_red_34dp"
            android:id="@+id/incorrectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/question"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="65dp"
            android:textColor="@color/delete"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@+id/questionMark"
            android:text="@string/math_text"
            android:layout_marginTop="65dp"
            android:textColor="@color/icons"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/questionMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:textColor="@color/icons"
            android:textSize="22sp" />
        <EditText
            android:id="@+id/answer"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/questionMark"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:inputType="number"
            android:enabled="false"
            android:textAlignment="textEnd"
            android:textColor="@color/icons"
            android:backgroundTint="#CCCCCC"
            android:textSize="22sp"
            />
        <TextView
            android:drawableStart="@drawable/ic_check_green_24dp"
            android:id="@+id/correctNum"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/answer"
            android:layout_height="wrap_content"

            android:layout_marginTop="65dp"
            android:textColor="@color/primary"
            android:layout_marginStart="40dp"
            android:textSize="22sp"/>
    </RelativeLayout>

