    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:stretchColumns="*"
        >
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <ImageButton
                android:src="@drawable/ic_check_black_24dp"
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@string/go_button"
                android:textSize="16sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="submit"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/number_1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_1"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
            <Button
                android:id="@+id/number_2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_2"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
            <Button
                android:id="@+id/number_3"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_3"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/number_4"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_4"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
            <Button
                android:id="@+id/number_5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_5"
                android:textColor="@color/icons"
                android:textSize="22sp"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
            <Button
                android:id="@+id/number_6"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_6"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/number_7"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_7"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>

            <Button
                android:id="@+id/number_8"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"
                android:text="@integer/num_8" />

            <Button
                android:id="@+id/number_9"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_9"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center_horizontal">
            <ImageButton
                android:src="@drawable/ic_home_white_34dp"
                android:id="@+id/tall_empty"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/delete_button"
                android:onClick="deleteAll"
                />
            <Button
                android:id="@+id/number_0"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="@integer/num_0"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/buttons"
                android:onClick="enterNumber"/>
            <ImageButton
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:id="@+id/number_delete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textSize="22sp"
                android:textColor="@color/icons"
                android:background="@drawable/remove_button"
                android:onClick="delete"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>